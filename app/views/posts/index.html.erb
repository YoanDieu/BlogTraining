<p id="notice"><%= notice %></p>

<div class="jumbotron">
  <h1>My Rail Blog</h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= link_to 'Voir', post, class: 'btn btn-info' %></td>
        <td><%= link_to 'Modifier', edit_post_path(post), class: 'btn btn-warning' %></td>
        <td><%= link_to 'Supprimer', post, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Ajouter un Article', new_post_path, class: 'btn btn-primary' %>
